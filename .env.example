# Server Configuration
PORT=3001
NODE_ENV=development

# Database
DATABASE_URL=postgresql://caelith:caelith@localhost:5432/caelith

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# Logging
LOG_LEVEL=info

# JWT Secret (required)
JWT_SECRET=change-this-in-production

# Admin bootstrap password (required in production; if unset in non-production admin bootstrap is skipped)
ADMIN_PASSWORD=

# Rate limit store: memory | database (defaults to database in production)
RATE_LIMIT_STORE=memory

# Test-only reset endpoint toggle (effective only when NODE_ENV=test)
ENABLE_TEST_RESET=0

# Embedding Provider: 'openai' or 'anthropic'
EMBEDDING_PROVIDER=openai

# OpenAI API Key (required if EMBEDDING_PROVIDER=openai)
OPENAI_API_KEY=

# Anthropic API Key (required for copilot + NL compiler; also used for embeddings if EMBEDDING_PROVIDER=anthropic)
ANTHROPIC_API_KEY=
